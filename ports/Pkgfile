name=ports
version=1.6
release=1
source=(https://crux.nu/files/tools/ports/$name-$version.tar.gz)

post_build() {
	mkdir -p $PKG/etc/ports
	for repo in core extra multilib contrib; do
		echo "#
# /etc/ports/$repo.git
#

URL=https://github.com/emmett1/repos.git
NAME=$repo
BRANCH=$repo

# End of file" > $PKG/etc/ports/$repo.git
	done

	# disable multilib & contrib by default
	mv $PKG/etc/ports/multilib.git{,.inactive}
	mv $PKG/etc/ports/contrib.git{,.inactive}	
}
