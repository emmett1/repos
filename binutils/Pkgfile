# Pkgfile for binutils

name=binutils
version=2.41
release=1
source=(https://sourceware.org/pub/$name/releases/$name-$version.tar.xz)

pkg_build() {
	mkdir -v build
	cd       build

	../configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-gold \
		--enable-ld=default \
		--enable-lto \
		--enable-plugins \
		--enable-shared \
		--disable-werror \
		--with-system-zlib \
		--enable-multilib \
		--with-lib-path=/usr/lib:/lib:/usr/lib32
	make DESTDIR=$PKG tooldir=/usr
	make DESTDIR=$PKG tooldir=/usr install
}