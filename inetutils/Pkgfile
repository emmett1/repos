name=inetutils
version=2.4
release=1
source=(https://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)
build_opt="
	--disable-logger
	--disable-whois
	--disable-rcp
	--disable-rexec
	--disable-rlogin
	--disable-rsh
	--disable-servers
"

post_build() {
	mkdir -p $PKG/{,s}bin
	mv $PKG/usr/bin/hostname $PKG/bin
	mv $PKG/usr/bin/ifconfig $PKG/sbin
}